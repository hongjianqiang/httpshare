{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "noEmitOnError":true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./src/types"
    }
}